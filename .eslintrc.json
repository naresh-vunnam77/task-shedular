{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier", "standard"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "semi": [2, "always"],
    "camelcase": [2, { "allow": ["^UNSAFE_"] }],
    "no-extend-native": 2,
    "no-proto": 2,
    "no-caller": 2,
    "no-unused-vars": [2, { "vars": "all", "args": "none" }],
    "new-cap": 2,
    "max-depth": [2, 5],
    "max-statements": [2, 60],
    "no-eq-null": 2,
    "wrap-iife": 2,
    "spaced-comment": 2,
    "no-cond-assign": ["error", "always"],
    "no-alert": 2,
    "no-console": 2,
    "no-await-in-loop": 1,
    "no-empty": [1, { "allowEmptyCatch": true }],
    "no-useless-escape": 1,
    "no-case-declarations": 0,
    "no-prototype-builtins": 0,
    "no-extra-boolean-cast": 0,
    "require-atomic-updates": 0,
    "no-empty-pattern": 1,
    "no-undef": 1,
    "no-dupe-keys": 1,
    "no-constant-condition": 1,
    "no-unreachable": 1,
    "getter-return": 1,
    "no-dupe-class-members": 1,
    "no-self-assign": 1,
    "no-unused-labels": 1,
    "space-before-function-paren": [0, { "anonymous": "always", "named": "never", "asyncArrow": "always" }],

    // NodeJs rules
    "block-scoped-var": 2,
    "global-require": 2,
    "no-mixed-requires": 2,
    "no-new-require": 2,

    // ES6 rules
    "no-var": 2,
    "prefer-const": 2,

    // React
    "react/prop-types": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/jsx-key": 2,
    "react/no-danger": 2,
    "react/no-is-mounted": 1,
    "react/no-deprecated": 2,
    "react/no-find-dom-node": 1,
    "react/no-array-index-key": 1,
    "react/no-unknown-property": 1,
    "react/no-unescaped-entities": 1,
    "react/display-name": 1,
    "react/jsx-no-target-blank": 1,
    "react/no-direct-mutation-state": 2,
    "react/jsx-no-undef": 1,
    "react/jsx-no-duplicate-props": 1,

    // react-hooks
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1
  }
}
